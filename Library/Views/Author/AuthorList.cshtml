@model List<Author>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center"> Yazar Listeleme Sayfası</h3>
<a class="btn btn-primary" asp-controller="Author" asp-action="Create" style="float:right;">Yeni Ekle</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Aksiyonlar</th>

        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th>@(i+1)</th>
                <td>@Model[i].FirstName</td>
                <td>@Model[i].LastName</td>
                <td>
                    <a class="big-icon" asp-controller="Author" asp-action="Edit" asp-route-id="@Model[i].ID"><i class="bi bi-pencil-square"></i></a>
                    @*bu yönlendirmeyi yaparken aynı zamanda tıklanılan değerin id paremetresinide gçndermesini sağlıyoruz (asp-route-id buradaki küçük id ile bunu karşılayacağız)*@
                    <a class="big-icon margin-icon" asp-controller="Author" asp-action="Delete" asp-route-id="@Model[i].ID"><i class="bi bi-x-circle"></i> </a>
                </td>
            </tr>
        }
    </tbody>
</table>